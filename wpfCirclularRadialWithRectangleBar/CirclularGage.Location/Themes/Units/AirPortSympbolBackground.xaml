<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:control="clr-namespace:CirclularGage.Location.UI.Units">
    
    <Style TargetType="{x:Type control:AirPortSympbolBackground}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type control:AirPortSympbolBackground}">
                    <Grid Background="Transparent">
                        <Ellipse x:Name="uavEclipse"
                                 Width="{TemplateBinding AirPortSymbolBackgroundWidth}"
                                 Height="{TemplateBinding AirPortSymbolBackgroundHeight}"
                                 Fill="Transparent" Stroke="White" StrokeDashArray="1 0 0 10"  
                                 StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeDashCap="Round"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>