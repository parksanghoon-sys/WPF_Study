<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:wpfDatePicker.UI.Views"
                    xmlns:units="clr-namespace:SmartDateControl.UI.Units">

    <Style TargetType="{x:Type views:DateWindow}">
        <Setter Property="SizeToContent" Value="WidthAndHeight"/>
        <Setter Property="Background" Value="#252525"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type views:DateWindow}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="100">
                        <Viewbox Width="1000" Margin="0 0 0 300">
                            <UniformGrid Columns="2" VerticalAlignment="Top">
                                <DatePicker Margin="20"/>
                                <units:SmartDate Margin="20"/>
                            </UniformGrid>
                        </Viewbox>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>