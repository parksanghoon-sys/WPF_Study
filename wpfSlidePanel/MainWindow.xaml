    <Grid x:Name="parent">
        <!--SlidePanel-->
        <!--<Grid x:Name="slidePanel">
            <Grid x:Name="opacityGrid" Background="LightGray"
                   Opacity=".3" MouseUp="opacityGrid_MouseUp"/>
            <Canvas>
                <Border x:Name="slider" 
                        Width="300" 
                        Height="{Binding ActualHeight, ElementName=parent}"
