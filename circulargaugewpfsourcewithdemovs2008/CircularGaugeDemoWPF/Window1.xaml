            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="330" />
                <ColumnDefinition Width="330"/>
            </Grid.ColumnDefinitions>
            


                <!--Black Gauge -->
            <gauge:CircularGaugeControl x:Name="myGauge1" Grid.Column="0" Grid.Row="0" 
                                        Radius="150" 
                                        ScaleRadius="100" 
                                        ScaleStartAngle="30" 
                                        ScaleSweepAngle="300"
                                        PointerLength="90" 
                                        PointerCapRadius="35" 
                                        
                                        MinValue="-6" 
                                        MaxValue="6" 
                                        MajorDivisionsCount="10" 
                                        MinorDivisionsCount="10" 
                                        CurrentValue="{Binding Score}"                                                                                
                                        RangeIndicatorThickness="5"
                                        RangeIndicatorRadius="80"
                              
                                        ScaleLabelRadius="115"
                                        ScaleLabelSize="40,20"
                                        ScaleLabelFontSize="10"
                                        ScaleLabelForeground="LightGray"
                                        
                                        MajorTickSize="10,3"
                                        MinorTickSize="3,1"
                                        MajorTickColor="LightGray"
                                        MinorTickColor="LightGray"                                  
                                        GaugeBackgroundColor="Black"
                                        PointerThickness ="6"
                                        OptimalRangeStartValue="0"
                                        OptimalRangeEndValue="0" 
                                        DialTextOffset="40"
                                        
                                        >

            </gauge:CircularGaugeControl>
            <Grid Grid.Column="0" Grid.Row="0"  Margin="0 ,100,0,0">
                <Ellipse x:Name="uavEclipse" Height="75" Width="75" 
                     HorizontalAlignment="Center" VerticalAlignment="Center"  Stroke="White" 
                     StrokeDashArray="1 0 0 10" Margin="0" StrokeStartLineCap="Round" 
                     StrokeEndLineCap="Round" StrokeDashCap="Round"/>
                <Path x:Name="uavPath" Data="M 14,0 L 16,0     16,0 16,5 30,5 30,7 16,7     16,10 20,10 20,12 16,12    10,12 10,10 14,10      14,7 0,7 0,5 14,5 Z" Fill="White" Stretch="Fill" RenderTransformOrigin="0.5,0.5" Height="15" VerticalAlignment="Center" HorizontalAlignment="Center" Width="15" Margin="0">
                    <Path.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleY="1" ScaleX="-1"/>
                            <SkewTransform AngleY="0" AngleX="0"/>
                            <RotateTransform Angle="00"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Path.RenderTransform>
                </Path>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.Background>
                    <LinearGradientBrush  StartPoint="0,0" EndPoint="0,1">
                        <GradientBrush.GradientStops>
                            <GradientStopCollection>
                                <GradientStop Color="#939393" Offset="1.0" />
                                <GradientStop Color="#FFFFFF" Offset="0.0" />
                            </GradientStopCollection>
                        </GradientBrush.GradientStops>
                    </LinearGradientBrush>
                </Grid.Background>
            </Grid> 
